<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wizard_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:animateLayoutChanges="true" >

    <TextView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/onandroid_wizard_1"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/step2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/wizard_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onandroid_wizard_2_checking"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/wizard_2_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wizard_2_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/wizard_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onandroid_wizard_3_downloading_1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ProgressBar
            android:id="@+id/wizard_3_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wizard_3_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <LinearLayout android:id="@+id/step4"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onandroid_wizard_4_text_1"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
        <Spinner
            android:id="@+id/onandroid_manufacturer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    
        <Spinner
            android:id="@+id/onandroid_device"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onandroid_wizard_4_text_2"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    
        <Spinner
            android:id="@+id/onandroid_manufacturer_mtd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    
        <Spinner
            android:id="@+id/onandroid_device_mtd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    
    </LinearLayout>

</LinearLayout>
