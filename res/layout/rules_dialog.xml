<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rules_dialog_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/rules_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/rule_input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/rule_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_rules_add" />

    <Button
        android:id="@+id/rule_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_rules_delete" />

</LinearLayout>