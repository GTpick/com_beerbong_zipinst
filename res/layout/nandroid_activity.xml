<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.beerbong.zipinst"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/test_configure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	    android:padding="20dp" />

    <TextView
        android:id="@+id/nandroid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_weight="1"
        android:background="@color/darkgray"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp" >

        <com.beerbong.zipinst.widget.Item
            android:id="@+id/nandroid_configure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:title="@string/nandroid_configure"
            app:downColor="?holoBlue" />

        <com.beerbong.zipinst.widget.Item
            android:id="@+id/nandroid_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:title="@string/nandroid_start"
            app:downColor="?holoBlue" />

    </LinearLayout>

</LinearLayout>