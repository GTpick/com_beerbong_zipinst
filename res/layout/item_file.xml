<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:background="?buttonItemBorderColor"
    android:baselineAligned="false"
    android:gravity="top"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="63dip"
        android:background="?buttonItemBackgroundColor"
        android:gravity="top"
        android:ignoreGravity="@+id/icon" >

        <ImageView android:id="@+id/grabber"
            android:src="?overflowIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:id="@+id/trash_separator"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@id/trash"
            android:background="?buttonItemBorderColor" />

        <ImageView
            android:id="@+id/trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:src="?removeIcon" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="55dp"
            android:layout_toLeftOf="@id/icon"
            android:layout_toRightOf="@id/grabber"
            android:ellipsize="end"
            android:fadingEdge="horizontal"
            android:paddingLeft="9dip"
            android:paddingRight="9dip"
            android:paddingTop="9dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/title"
            android:layout_below="@id/title"
            android:layout_marginRight="55dp"
            android:ellipsize="end"
            android:paddingLeft="9dip"
            android:paddingRight="9dip"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?android:attr/textColorSecondary" />

    </RelativeLayout>

</LinearLayout>
